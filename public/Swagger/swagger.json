{
    "openapi": "3.0.0",
    "info": {
        "title": "bilemo-api",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000/api/",
            "description": "Api BileMo"
        }
    ],
    "paths": {
        "/login_check": {
            "post": {
                "operationId": "9056e654130817d5830fe3912b502e81",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "username": {
                                        "description": "The username of the client.",
                                        "type": "string",
                                        "example": "yourUsername"
                                    },
                                    "password": {
                                        "description": "Password of the client.",
                                        "type": "string",
                                        "example": "yourPassword"
                                        
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Authenticate token JWT",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Client"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials"
                    },
                    "404": {
                        "description": "Page not found"
                    }
                }
            }
        },
        "/mobiles": {
            "get": {
                "summary": "Return a list of phones ressource",
                "operationId": "32acfc985d6def6ddc382e6d6df6ee19",
                "responses": {
                    "200": {
                        "description": "List of the mobile phones",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Product"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "JWT Token not found or expired"
                    },
                    "404": {
                        "description": "Page not found"
                    }
                },
                "security": [
                    {
                       "bearerAuth": []
                    }
                 ]
            }
        },
        "/mobiles/{id}": {
            "get": {
                "summary": "Return phone details",
                "operationId": "358dda1353c9977c9bb71fa5de88224a",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id of the mobile phone to get",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Details for one mobile",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "JWT Token not found or expired"
                    },
                    "404": {
                        "description": "Page not found"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/users": {
            "get": {
                "summary": "Return a list of users for the client",
                "operationId": "188bef79089c193d56b951242835f198",
                "responses": {
                    "200": {
                        "description": "List of the mobile phones",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/User"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "JWT Token not found or expired"
                    },
                    "404": {
                        "description": "Page not found"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/users/{id}": {
            "get": {
                "summary": "Return user client details",
                "operationId": "91d8b7bd829c950d78ae23fd879ba4e2",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id of the user",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Details for one user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "JWT Token not found or expired"
                    },
                    "404": {
                        "description": "Page not found"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    }, 
    "components": {
        "securitySchemes": {
            "bearerAuth": {
              "type": "http",
              "scheme": "bearer",
              "bearerFormat": "JWT " 
            }
        },
        "security": {
           "bearerAuth": []  
        },
        "schemas": {
            "Product": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number",
                        "format": "float"
                    },
                    "description": {
                        "type": "string"
                    },
                    "brand": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "User": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "username": {
                        "type": "string"
                    },
                    "roles": {
                        "type": "json"
                    },
                    "password": {
                        "description": "The hashed password",
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "lastname": {
                        "type": "string"
                    },
                    "firstname": {
                        "type": "string"
                    },
                    "dateCreate": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Client": {
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "description": "The hashed password",
                        "type": "string"
                    }
                },
                "type": "object"
            }
        }
    }
}